<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="operator_button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/operator_background_color</item>
        <item name="android:textColor">@color/operator_text_color</item>

    </style>

    <style name="operator_button_style" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/operator_background_color</item>
        <item name="android:textColor">@color/operator_text_color</item>
        <item name="android:textSize">34sp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/operator_text_color</item>
        <item name="iconSize">30dp</item>
    </style>



    <style name="number_button_style" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/number_background_color</item>
        <item name="android:textColor">@color/number_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/number_text_color</item>
        <item name="iconSize">30dp</item>
        <item name="layout_constraintWidth_max">320dp</item>
    </style>
</resources>